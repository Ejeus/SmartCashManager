<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adderay"
    android:background="@drawable/backgroundlogin"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/esrc_h"
                    android:textColor="@color/lightbrown"
                    android:layout_marginLeft="5dp"
                    android:text="Source of Income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/esrc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_back"
                    android:hint="Source of Expense"
                    android:inputType="textPersonName"
                    android:padding="1dp"
                    android:textColorHint="@color/lightbrown" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">


                <TextView
                    android:visibility="invisible"
                    android:id="@+id/eamt_h"
                    android:textColor="@color/lightbrown"
                    android:layout_marginLeft="5dp"
                    android:text="Amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textColorHint="@color/lightbrown"
                    android:layout_marginTop="5dp"
                    android:padding="1dp"
                    android:background="@drawable/edittext_back"
                    android:id="@+id/eamt"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/etype_h"
                    android:textColor="@color/lightbrown"
                    android:layout_marginLeft="5dp"
                    android:text="Mode of Income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textColorHint="@color/lightbrown"
                    android:layout_marginTop="5dp"
                    android:padding="1dp"
                    android:background="@drawable/edittext_back"
                    android:id="@+id/etype"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mode of Expense" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/lightbrown"
                    android:layout_marginLeft="5dp"
                    android:text="Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:padding="1dp"
                    android:background="@drawable/edittext_back"
                    android:id="@+id/edate"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/lightbrown"
                    android:layout_marginLeft="5dp"
                    android:text="Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:padding="1dp"
                    android:background="@drawable/edittext_back"
                    android:id="@+id/etime"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/baltb"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/lightbrown"
                    android:layout_marginLeft="5dp"
                    android:text="Balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:padding="1dp"
                    android:background="@drawable/edittext_back"
                    android:textColor="@android:color/white"
                    android:id="@+id/ebal"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/expensePhoto"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:onClick="images"
                    android:text="Select Photo" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:textSize="20dp"
                android:textColor="@color/darkbrown"
                android:background="@drawable/edittext_back"
                android:layout_marginRight="10dp"
                android:text="Save"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/esave" />

            <Button
                android:textSize="20dp"
                android:textColor="@color/darkbrown"
                android:background="@drawable/edittext_back"
                android:text="Clear"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/eclear" />
        </TableRow>
    </TableLayout>
</RelativeLayout>